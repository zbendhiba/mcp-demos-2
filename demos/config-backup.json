          "args": [
            "run",
            "--rm",
            "-i",
            "-v",
            "mcp-test:/mcp",
            "mcp/sqlite",
            "--db-path",
            "/mcp/test.db"
          ]
        },
        "postgres": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-postgres",
          "postgresql://myuser:your_secret_password@localhost:5432/mydatabase"
        ]
      },
      "filesystem": {
        "command": "npx",
        "args": [
